

<div id="index_shoes">
  <h1>All shoes </h1>
  <div class="d-flex flex-wrap" >

       
  <% @shoes.each do |shoe| %>

      <div class="d-flex flex-column "  >
      <%= image_tag shoe.first_image, :class => 'thumb' if shoe.first_image.present? %>
   
      <%= link_to shoe.name , shoe , :class => "shoe-name" %>
   
    </div>

  <% end %>
  

</div>
</div>
