<!DOCTYPE html>
<html>
  <head>
    <title>Sneakerhead</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <%= link_to "Home", root_path %>
  <% if @current_user.present? %>
   <%= link_to "All users", users_path if @current_user.admin? %>
  <%= link_to 'Brands', brands_path %>
  <%= link_to 'New Brand', new_brand_path if @current_user.admin? %>
    <%= link_to "Logout #{ @current_user.email }", login_path, :method => 'delete' %>
<% else %>
  <%= link_to "Sign Up", new_user_path %>
  <%= link_to "Login", login_path %>

  <% end %>


    

    <%= yield %>
  </body>
</html>
