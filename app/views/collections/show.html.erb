
<div id="index_shoes">
<div class="collection-worth" >
<p> Your Collection Worth : $ <%= @collection.worth %> </p>
</div>




 <div class="d-flex flex-wrap" >
<% @collection.shoes.each do |shoe| %>
  <div class="d-flex flex-column "  >
     <ul>  <%= shoe.name %>  price : AUD <%= shoe.cost_price %> </ul>
    <%= link_to image_tag(shoe.first_image, :class => 'thumb'), shoe %>
</div>
<% end %>
</div>

</div>

<div class="controls">
  <div class="button-box col-lg-12">
     <%= button_to "Edit collection ", @collection ,:method=> :remove, :class=>"btn btn-primary btn-lg"  %>
    <%= button_to 'Delete collection', @collection, :method => :delete, :class=>"btn btn-secondary btn-lg" , :data => {:confirm => 'Are you sure?'} %>
</div>
</div>